{
  "editor.formatOnSave": true,
  "editor.codeActionsOnSave": { "source.fixAll.eslint": true },
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact"
  ],
  "eslint.alwaysShowStatus": true,
  "eslint.workingDirectories": [{ "mode": "auto" }],
  "eslint.options": {
    "extensions": [".js", ".jsx", ".ts", ".tsx", ".vue", ".html"]
  },
  "prettier.singleQuote": true,
  "prettier.semi": false
}
